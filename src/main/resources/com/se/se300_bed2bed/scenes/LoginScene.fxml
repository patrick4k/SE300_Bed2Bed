<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.se.se300_bed2bed.scenes.LoginScene">
   <children>
      <Label contentDisplay="CENTER" layoutX="27.0" layoutY="54.0" text="Login/Register" textAlignment="CENTER" textFill="#2592f2">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <Label layoutX="27.0" layoutY="146.0" text="Username">
         <font>
            <Font size="14.0" />
         </font></Label>
      <Label layoutX="29.0" layoutY="189.0" text="Password">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <TextField fx:id="usernameTextField" layoutX="101.0" layoutY="144.0" promptText="username/email" />
      <PasswordField fx:id="passwordTextField" layoutX="101.0" layoutY="188.0" promptText="password" />
      <Button fx:id="loginButton" layoutX="27.0" layoutY="252.0" mnemonicParsing="false" onAction="#loginAction" prefHeight="25.0" prefWidth="149.0" style="-fx-background-color: #2592f2;" text="Login" textFill="WHITE">

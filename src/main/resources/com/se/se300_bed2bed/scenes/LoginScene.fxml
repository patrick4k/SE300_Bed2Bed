      <AnchorPane layoutX="300.0" layoutY="-1.0" prefHeight="400.0" prefWidth="299.0">
         <children>
            <ImageView fx:id="loginImage" fitHeight="400.0" fitWidth="299.0" pickOnBounds="true" preserveRatio="true" />
         </children>
      </AnchorPane>
      <Hyperlink fx:id="createAccountHyperlink" layoutX="29.0" layoutY="342.0" text="Create Account" />
      <Button fx:id="continueAsGuestButton" layoutX="27.0" layoutY="289.0" mnemonicParsing="false" onAction="#continueAsGuestAction" prefHeight="25.0" prefWidth="149.0" style="-fx-background-color: #2592f2;" text="Continue As Guest" textFill="WHITE">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
